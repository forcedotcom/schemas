          },
          {
            "type": "string",
            "title": "NumPlatformEvents:<value>",
            "pattern": "^(NumPlatformEvents\\:[0-9]+$)"
          },
          {
            "type": "string",
            "title": "StreamingEventsPerDay:<value>",
