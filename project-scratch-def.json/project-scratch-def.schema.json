              "DevelopmentWave",
              "EinsteinAnalyticsPlus",
              "EinsteinAssistant",
              "EinsteinBuilder",
              "Entitlements",
              "EventLogFile",
              "ExternalIdentityLogin",
              "ExternalSharing",
              "FieldService",
