          },
          {
            "type": "string",
            "title": "FinancialServicesUser:<value>",
            "pattern": "^(FinancialServicesUser\\:[0-9]+$)"
          },
          {
            "type": "string",
            "title": "GenStreamingEventsPerDay:<value>",
