              "Knowledge",
              "LightningSalesConsole",
              "LightningServiceConsole",
              "LiveAgent",
              "LiveMessage",
              "MarketingUser",
              "MaxApexCodeSize:<value>",
              "MaxCustomLabels:<value>",
              "MobileUser",
              "MultiCurrency",
              "OfflineUser",
              "Pardot",
              "PersonAccounts",
              "PlatformCache",
              "PlatformEncryption",
              "ProcessBuilder",
              "ProductsAndSchedules",
              "RecordTypes",
              "RetainFieldHistory",
              "SalesUser",
              "ServiceCloud",
              "ServiceUser",
              "SiteDotCom",
              "SiteForceContributor",
              "Sites",
              "StateAndCountryPicklist",
              "SurveyCreatorUser",
              "TerritoryManagement2",
              "TimeSheetTemplateSettings",
              "UiPlugin",
              "WavePlatform",
              "Workflow"
            ]
          }
        ]
      }
    },
    "hasSampleData": {
      "type": "boolean",
      "title": "Include Sample Data",
      "description": "Valid values are true and false. False is the default, which creates an org without sample data.",
      "default": "false"
    },
